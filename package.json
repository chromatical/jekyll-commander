{
  "name": "jekyll-commander",
  "version": "1.0.0",
  "productName": "Jekyll Commander",
  "description": "Manage Jekyll websites without the command line.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build --x64 --ia32"
  },
  "repository": "https://github.com/chromatical/jekyll-commander",
  "keywords": [
    "Jekyll",
    "website"
  ],
  "author" : { "name" : "James King", "email" : "hello@chromaticaldesign.com", "url" : "https://chromaticaldesign.com"},
  "homepage": "https://phonepresenter.com",
  "license": "MIT",
  "build": {
    "appId": "com.ChromaticalDesign.JekyllCommander",
    "linux": {
      "category": "Development",
      "target": ["deb"],
      "depends": ["libgconf-2-4"]
    },
    "mac": {
      "category": "public.app-category.productivity"
    }
  },
  "devDependencies": {
    "electron": "^1.6.11",
    "electron-builder": "^19.18.1"
  },
  "dependencies": {
    "archiver": "^2.0.0",
    "jquery": "^3.2.1",
    "vue": "^2.4.2"
  }
}
